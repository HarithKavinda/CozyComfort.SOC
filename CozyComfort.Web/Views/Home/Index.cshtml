@{
    ViewData["Title"] = "CozyComfort - Supply Chain Management";
    ViewData["FullWidth"] = true;
}

<div class="hero">
    <div class="hero-bg"></div>
    <div class="hero-visual">
        <svg viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="100" cy="100" r="80" stroke="url(#g1)" stroke-width="2" fill="none" opacity="0.4"/>
            <circle cx="100" cy="100" r="60" stroke="url(#g2)" stroke-width="2" fill="none" opacity="0.5"/>
            <path d="M100 40 L140 100 L100 160 L60 100 Z" stroke="url(#g3)" stroke-width="2" fill="rgba(0,212,170,0.1)"/>
            <circle cx="100" cy="100" r="8" fill="var(--accent)"/>
            <defs>
                <linearGradient id="g1" x1="0%" y1="0%" x2="100%" y2="100%"><stop offset="0%" style="stop-color:#00d4aa"/><stop offset="100%" style="stop-color:#06b6d4"/></linearGradient>
                <linearGradient id="g2" x1="0%" y1="100%" x2="100%" y2="0%"><stop offset="0%" style="stop-color:#7c3aed"/><stop offset="100%" style="stop-color:#00d4aa"/></linearGradient>
                <linearGradient id="g3" x1="0%" y1="0%" x2="100%" y2="100%"><stop offset="0%" style="stop-color:#00d4aa"/><stop offset="100%" style="stop-color:#7c3aed"/></linearGradient>
            </defs>
        </svg>
    </div>
    <div class="hero-content">
        <a href="@Url.Action("Register", "Auth")" class="hero-badge"><i class="fas fa-bolt"></i> Smart Supply Chain</a>
        <h1>CozyComfort</h1>
        <p class="tagline">From Manufacturer to Customer â€” One Seamless Flow</p>
        <p class="subtag">Real-time notifications, order tracking, and complete visibility across your supply chain.</p>
        <div class="hero-buttons">
            <a href="@Url.Action("Register", "Auth")" class="cta-btn cta-primary"><i class="fas fa-rocket"></i> Get Started</a>
            <a href="@Url.Action("Login", "Auth")" class="cta-btn cta-secondary"><i class="fas fa-sign-in-alt"></i> Sign In</a>
        </div>
    </div>
</div>

<section class="features">
    <h2 class="section-title">Why CozyComfort?</h2>
    <div class="features-grid">
        <a href="@Url.Action("Register", "Auth")" class="feature-card">
            <div class="feature-icon"><i class="fas fa-industry"></i></div>
            <h3>Manufacturer</h3>
            <p>Manage stock, fulfill orders, send notifications to distributors.</p>
            <span class="feature-link">Start as Manufacturer <i class="fas fa-arrow-right"></i></span>
        </a>
        <a href="@Url.Action("Register", "Auth")" class="feature-card">
            <div class="feature-icon"><i class="fas fa-truck"></i></div>
            <h3>Distributor</h3>
            <p>View manufacturer stock, place orders, manage seller orders.</p>
            <span class="feature-link">Start as Distributor <i class="fas fa-arrow-right"></i></span>
        </a>
        <a href="@Url.Action("Register", "Auth")" class="feature-card">
            <div class="feature-icon"><i class="fas fa-store"></i></div>
            <h3>Seller</h3>
            <p>Order from distributors, track shipments, serve customers.</p>
            <span class="feature-link">Start as Seller <i class="fas fa-arrow-right"></i></span>
        </a>
        <a href="@Url.Action("Register", "Auth")" class="feature-card">
            <div class="feature-icon"><i class="fas fa-shopping-cart"></i></div>
            <h3>Customer</h3>
            <p>Browse products, select quantity, complete purchases.</p>
            <span class="feature-link">Start as Customer <i class="fas fa-arrow-right"></i></span>
        </a>
    </div>
</section>

<section class="cta-section">
    <div class="cta-box">
        <h2>Ready to streamline your supply chain?</h2>
        <p>Join CozyComfort today and connect with manufacturers, distributors, and sellers.</p>
        <a href="@Url.Action("Register", "Auth")" class="cta-btn cta-primary"><i class="fas fa-user-plus"></i> Create Account</a>
        <a href="@Url.Action("Login", "Auth")" class="cta-btn cta-outline"><i class="fas fa-sign-in-alt"></i> Sign In</a>
    </div>
</section>

<style>
    .hero {
        min-height: calc(100vh - 70px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 3rem 2rem;
        position: relative;
        overflow: hidden;
    }
    .hero-visual {
        position: absolute;
        right: 10%;
        top: 50%;
        transform: translateY(-50%);
        width: 280px;
        height: 280px;
        opacity: 0.6;
        pointer-events: none;
        z-index: 0;
    }
    .hero-visual svg { width: 100%; height: 100%; }
    .hero-bg {
        position: absolute;
        inset: 0;
        background: 
            radial-gradient(circle at 30% 40%, rgba(0, 212, 170, 0.15), transparent 40%),
            radial-gradient(circle at 70% 60%, rgba(124, 58, 237, 0.12), transparent 40%),
            radial-gradient(circle at 50% 80%, rgba(6, 182, 212, 0.1), transparent 35%);
        pointer-events: none;
        z-index: 0;
    }
    .hero-content {
        position: relative;
        text-align: center;
        max-width: 720px;
        z-index: 10;
    }
    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 18px;
        background: rgba(0, 212, 170, 0.15);
        border: 1px solid rgba(0, 212, 170, 0.3);
        border-radius: 50px;
        color: var(--accent);
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        text-decoration: none;
        cursor: pointer;
    }
    .hero h1 {
        font-family: 'Outfit', sans-serif;
        font-size: clamp(2.8rem, 7vw, 4.5rem);
        font-weight: 700;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #fff 0%, var(--accent) 50%, var(--accent3) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    .tagline { font-size: 1.4rem; color: var(--text); margin-bottom: 0.75rem; font-weight: 500; }
    .subtag { color: var(--text-muted); font-size: 1.1rem; line-height: 1.7; margin-bottom: 2.5rem; }
    .hero-buttons { display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; }
    .cta-btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 1rem 2rem;
        border-radius: 14px;
        font-weight: 600;
        font-size: 1.05rem;
        text-decoration: none;
        transition: all 0.3s ease;
        cursor: pointer;
    }
    .cta-primary {
        background: linear-gradient(135deg, var(--accent), var(--accent3));
        color: var(--bg-dark);
    }
    .cta-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 30px rgba(0, 212, 170, 0.4);
    }
    .cta-secondary {
        background: rgba(255,255,255,0.05);
        border: 2px solid rgba(255,255,255,0.2);
        color: var(--text);
    }
    .cta-secondary:hover {
        background: rgba(255,255,255,0.1);
        border-color: var(--accent);
        color: var(--accent);
    }
    .cta-outline { background: transparent; border: 2px solid var(--accent); color: var(--accent); }
    .cta-outline:hover { background: rgba(0,212,170,0.15); }
    .features {
        padding: 5rem 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }
    .section-title {
        text-align: center;
        font-size: 2rem;
        margin-bottom: 3rem;
        color: var(--text);
    }
    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 1.5rem;
    }
    .feature-card {
        background: rgba(20, 28, 38, 0.6);
        backdrop-filter: blur(16px);
        border: 1px solid rgba(255,255,255,0.06);
        border-radius: 20px;
        padding: 2rem;
        transition: all 0.35s ease;
        text-decoration: none;
        color: inherit;
        display: block;
        cursor: pointer;
    }
    .feature-card:hover {
        transform: translateY(-5px);
        border-color: rgba(0, 212, 170, 0.3);
        box-shadow: 0 20px 40px rgba(0,0,0,0.3);
    }
    .feature-icon {
        width: 56px;
        height: 56px;
        background: linear-gradient(135deg, rgba(0,212,170,0.2), rgba(6,182,212,0.2));
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: var(--accent);
        margin-bottom: 1.25rem;
    }
    .feature-card h3 { margin-bottom: 0.5rem; font-size: 1.2rem; }
    .feature-card p { color: var(--text-muted); font-size: 0.95rem; line-height: 1.6; margin-bottom: 1rem; }
    .feature-link {
        color: var(--accent);
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: gap 0.3s;
        cursor: pointer;
    }
    .feature-link:hover { gap: 12px; }
    .cta-section { padding: 4rem 2rem; }
    .cta-box {
        max-width: 640px;
        margin: 0 auto;
        text-align: center;
        padding: 3rem;
        background: rgba(20, 28, 38, 0.5);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255,255,255,0.08);
        border-radius: 24px;
    }
    .cta-box h2 { margin-bottom: 1rem; font-size: 1.75rem; }
    .cta-box p { color: var(--text-muted); margin-bottom: 2rem; }
    .cta-box .cta-btn { margin: 0 0.5rem 0.5rem 0; }
    @@media (max-width: 768px) {
        .hero-visual { display: none; }
    }
</style>
