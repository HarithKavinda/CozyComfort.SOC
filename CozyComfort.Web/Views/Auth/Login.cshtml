@{
    ViewData["Title"] = "Login";
}

<div class="auth-page">
    <div class="auth-hero">
        <div class="auth-hero-content">
            <i class="fas fa-sign-in-alt auth-hero-icon"></i>
            <h2>Welcome Back</h2>
            <p>Sign in to access your dashboard and manage your supply chain.</p>
            <div class="auth-benefits">
                <span><i class="fas fa-check"></i> Real-time notifications</span>
                <span><i class="fas fa-check"></i> Order tracking</span>
                <span><i class="fas fa-check"></i> Stock management</span>
            </div>
        </div>
    </div>
    <div class="auth-form-wrap">
        <div class="card auth-card">
            <h2><i class="fas fa-sign-in-alt"></i> Sign In</h2>
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success"><i class="fas fa-check-circle"></i> @TempData["Success"]</div>
            }
            @if (ViewBag.Error != null || TempData["Error"] != null)
            {
                <div class="alert alert-error"><i class="fas fa-exclamation-circle"></i> @(ViewBag.Error ?? TempData["Error"])</div>
            }
            <form asp-controller="Auth" asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <label><i class="fas fa-envelope"></i> Email</label>
                <input type="email" name="email" required placeholder="you@example.com" />
                <label><i class="fas fa-lock"></i> Password</label>
                <input type="password" name="password" required placeholder="••••••••" />
                <button type="submit" class="auth-submit"><i class="fas fa-sign-in-alt"></i> Login</button>
            </form>
            <p class="auth-switch">
                Don't have an account? <a asp-controller="Auth" asp-action="Register"><i class="fas fa-user-plus"></i> Register</a>
            </p>
        </div>
    </div>
</div>

<style>
    .auth-page { display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; align-items: center; min-height: calc(100vh - 180px); }
    .auth-hero { background: rgba(20, 28, 38, 0.5); backdrop-filter: blur(16px); border: 1px solid rgba(255,255,255,0.06); border-radius: 24px; padding: 2.5rem; }
    .auth-hero-icon { font-size: 3rem; color: var(--accent); margin-bottom: 1rem; }
    .auth-hero h2 { margin-bottom: 0.5rem; }
    .auth-hero p { color: var(--text-muted); margin-bottom: 1.5rem; }
    .auth-form-wrap { max-width: 420px; }
    .auth-card h2 { margin-bottom: 1.5rem; display: flex; align-items: center; gap: 10px; }
    .auth-submit { width: 100%; margin-top: 24px; cursor: pointer; }
    .auth-switch { margin-top: 1.5rem; text-align: center; color: var(--text-muted); }
    .auth-switch a { color: var(--accent); text-decoration: none; cursor: pointer; }
    .auth-switch a:hover { text-decoration: underline; }
    .auth-benefits { display: flex; flex-direction: column; gap: 0.5rem; }
    .auth-benefits span { color: var(--text-muted); }
    .auth-benefits i { color: var(--accent); margin-right: 8px; }
    @@media (max-width: 900px) { .auth-page { grid-template-columns: 1fr; } .auth-hero { order: -1; } }
</style>
