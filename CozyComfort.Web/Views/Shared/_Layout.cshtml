@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var isLoggedIn = !string.IsNullOrEmpty(HttpContextAccessor.HttpContext?.Session.GetString("UserData"));
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "CozyComfort") - Supply Chain</title>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        :root {
            --bg-dark: #0a0e14;
            --bg-card: rgba(20, 28, 38, 0.7);
            --bg-card-solid: #141c26;
            --bg-input: rgba(30, 40, 55, 0.8);
            --accent: #00d4aa;
            --accent2: #7c3aed;
            --accent3: #06b6d4;
            --accent-hover: #00f5c4;
            --text: #e8edf2;
            --text-muted: #94a3b8;
            --danger: #f43f5e;
            --glass: rgba(255,255,255,0.03);
            --glass-border: rgba(255,255,255,0.08);
        }
        * { margin: 0; padding: 0; box-sizing: border-box; }
        html { scroll-behavior: smooth; }
        body {
            font-family: 'DM Sans', sans-serif;
            background: var(--bg-dark);
            color: var(--text);
            min-height: 100vh;
            cursor: default;
            background-image: 
                radial-gradient(ellipse 100% 80% at 20% 0%, rgba(0, 212, 170, 0.12), transparent 50%),
                radial-gradient(ellipse 80% 60% at 80% 20%, rgba(124, 58, 237, 0.1), transparent 50%),
                radial-gradient(ellipse 60% 50% at 50% 100%, rgba(6, 182, 212, 0.08), transparent 50%);
            opacity: 0;
            transform: translateY(8px);
            transition: opacity 0.4s ease-out, transform 0.4s ease-out;
        }
        body.page-ready {
            opacity: 1;
            transform: translateY(0);
        }
        .navbar {
            background: rgba(10, 14, 20, 0.75);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            padding: 0.9rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid var(--glass-border);
            position: sticky;
            top: 0;
            z-index: 100;
            transition: all 0.25s ease;
        }
        .navbar.navbar-scrolled {
            background: rgba(5, 8, 14, 0.96);
            border-bottom-color: rgba(0, 0, 0, 0.6);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.55);
            padding: 0.6rem 2rem;
        }
        .navbar .logo {
            font-family: 'Outfit', sans-serif;
            font-weight: 700;
            font-size: 1.4rem;
            background: linear-gradient(135deg, var(--accent), var(--accent3));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-decoration: none;
            transition: opacity 0.3s;
            cursor: pointer !important;
        }
        .navbar .logo:hover { opacity: 0.9; cursor: pointer; }
        .nav-links a { cursor: pointer !important; -webkit-user-select: none; user-select: none; }
        .nav-links {
            display: flex;
            gap: 0.5rem;
            align-items: center;
        }
        .nav-links a, .nav-btn {
            color: var(--text-muted);
            text-decoration: none;
            padding: 0.5rem 1rem;
            border-radius: 10px;
            font-weight: 500;
            transition: all 0.25s ease;
        }
        .nav-links a:hover, .nav-btn:hover {
            color: var(--accent);
            background: rgba(0, 212, 170, 0.1);
        }
        .nav-btn-primary {
            background: linear-gradient(135deg, var(--accent), var(--accent3));
            color: var(--bg-dark) !important;
        }
        .nav-btn-primary { cursor: pointer; }
        .nav-btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 212, 170, 0.3);
        }
        .container { padding: 2rem; max-width: 1200px; margin: 0 auto; }
        .card {
            background: var(--bg-card);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
            padding: 2rem;
            border-radius: 20px;
            border: 1px solid var(--glass-border);
            box-shadow: 0 8px 32px rgba(0,0,0,0.2);
            position: relative;
            overflow: hidden;
            transition: transform 0.25s ease, box-shadow 0.25s ease, border-color 0.25s ease;
        }
        .card::before {
            content: "";
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at top left, rgba(0,212,170,0.18), transparent 55%);
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.25s ease;
        }
        .card:hover {
            border-color: rgba(0, 212, 170, 0.24);
            box-shadow: 0 16px 40px rgba(0, 0, 0, 0.55);
            transform: translateY(-2px);
        }
        .card:hover::before {
            opacity: 1;
        }
        input, select, textarea {
            width: 100%;
            padding: 14px 18px;
            margin-top: 8px;
            background: var(--bg-input);
            border: 1px solid var(--glass-border);
            border-radius: 12px;
            color: var(--text);
            font-family: inherit;
            transition: all 0.25s ease;
        }
        input:focus, select:focus {
            outline: none;
            border-color: var(--accent);
            box-shadow: 0 0 0 3px rgba(0, 212, 170, 0.15);
        }
        label { display: block; margin-top: 16px; color: var(--text-muted); font-weight: 500; }
        button, .btn {
            padding: 14px 28px;
            background: linear-gradient(135deg, var(--accent), #00b894);
            color: var(--bg-dark);
            border: none;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer !important;
            font-family: inherit;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            text-decoration: none;
            transition: all 0.3s ease;
            -webkit-user-select: none;
            user-select: none;
        }
        button:hover, .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0, 212, 170, 0.35);
        }
        .btn-outline {
            background: transparent;
            border: 2px solid var(--accent);
            color: var(--accent);
        }
        .btn-outline:hover { background: rgba(0, 212, 170, 0.12); }
        .btn-sm { padding: 10px 18px; font-size: 0.9rem; }
        .btn-danger { background: linear-gradient(135deg, #f43f5e, #e11d48); color: white; }
        .grid-2 { display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; }
        .grid-3 { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1rem; }
        .alert { padding: 14px; border-radius: 12px; margin-bottom: 1rem; }
        .alert-error { background: rgba(244, 63, 94, 0.15); color: #f43f5e; border: 1px solid rgba(244,63,94,0.3); }
        .alert-success { background: rgba(0, 212, 170, 0.15); color: var(--accent); border: 1px solid rgba(0,212,170,0.3); }
        table { width: 100%; border-collapse: collapse; }
        th, td { padding: 14px; text-align: left; border-bottom: 1px solid var(--glass-border); }
        th { color: var(--text-muted); font-weight: 600; }
        .tab-container { display: flex; gap: 0.5rem; margin-bottom: 1.5rem; flex-wrap: wrap; }
        a { cursor: pointer !important; }
        .tab { padding: 12px 20px; background: var(--bg-input); border-radius: 10px; cursor: pointer; border: 1px solid transparent; color: var(--text-muted); transition: all 0.25s; }
        .tab:hover { color: var(--accent); background: rgba(0,212,170,0.08); }
        .tab.active { background: rgba(0, 212, 170, 0.2); color: var(--accent); border-color: var(--accent); }
        .dashboard-header { margin-bottom: 2rem; animation: slideDown 0.4s ease-out; }
        .dashboard-header h1 { font-family: 'Outfit', sans-serif; display: flex; align-items: center; gap: 12px; font-size: 1.75rem; }
        .dashboard-header h1 i { color: var(--accent); }
        .dashboard-header p { color: var(--text-muted); margin-top: 0.5rem; }
        @@keyframes slideDown {
            from { opacity: 0; transform: translateY(-8px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .modal-overlay[style*="flex"] { display: flex !important; }
    </style>
</head>
<body onload="document.body.classList.add('page-ready')">
    <nav class="navbar">
        <a href="@Url.Action("Index", "Home")" class="logo"><i class="fas fa-layer-group"></i> CozyComfort</a>
        <div class="nav-links">
            @if (isLoggedIn)
            {
                <a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> Home</a>
                <a href="@Url.Action("Index", "Dashboard")"><i class="fas fa-th-large"></i> Dashboard</a>
                <a href="@Url.Action("Logout", "Auth")" class="nav-btn-primary"><i class="fas fa-sign-out-alt"></i> Logout</a>
            }
            else
            {
                <a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> Home</a>
                <a href="@Url.Action("Login", "Auth")"><i class="fas fa-sign-in-alt"></i> Sign In</a>
                <a href="@Url.Action("Register", "Auth")" class="nav-btn-primary"><i class="fas fa-user-plus"></i> Register</a>
            }
        </div>
    </nav>
    @if (ViewData["FullWidth"] as bool? == true)
    {
        @RenderBody()
    }
    else
    {
        <div class="container">@RenderBody()</div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
